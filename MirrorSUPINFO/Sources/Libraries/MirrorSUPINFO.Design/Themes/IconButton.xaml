<UserControl Name="IconButton" x:Class="MirrorSUPINFO.Design.IconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Button HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="50" Height="50">
            <Button.Content>
                <Image Source="{Binding ElementName=ImageButton, Path=Image}" Margin="-10" Width="50" Height="50"/>
            </Button.Content>
        </Button>
    </Grid>

</UserControl>
